    <Button
        android:id="@+id/next"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="next"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</LinearLayout>